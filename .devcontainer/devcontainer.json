{
    "name": "Marimo Lab",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "runArgs": [
        "--name", "marimo_lab"
    ],
    // "containerEnv": {
    // },
    "workspaceMount": "source=${localWorkspaceFolder}/src/,target=/marimo_lab,type=bind",
    "workspaceFolder": "/marimo_lab",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "njpwerner.autodocstring",
                "charliermarsh.ruff",
                "marimo-team.vscode-marimo"
            ],
            "settings": {
                "files.autoSave": "off"
            }
        }
    }
}